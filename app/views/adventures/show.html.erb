<div class="container">
    <div class="row">
      <div class="span9">
      <h1><%= link_to @adventure.name, @adventure %></h1>
        <% if current_user.try(:admin?)%>
            <%= link_to 'Edita la partida', edit_adventure_path(@adventure) %> 
        <% end %>
      <p>
          <b>Sistema de juego: </b>
          <%= @adventure.system %>
      </p>
      <p>
          <b>Descripti칩n:</b>
          <%= @adventure.description %>
      </p>
      <p>
          <b>Maestro de ceremonias:</b>
          <%= @adventure.mc %>
      </p>
      <p>
          <b>Estado de la partida: </b>
          <% if @adventure.playing? %>
             jugando 
          <% else %>
             terminada 
          <% end %>
      </p>        
      <p><b>Protagonizada por: </b></p>
      <ol>
          <% @adventure.characters.each do |char| %>
            <li><b><%= char.name %></b></li></p>   
          <% end %>
      </ol>
    


    <h2>Diario de la aventura</h2>
    <% @adventure.chapters.each do |chapter| %>
        <h4><b><%= chapter.name %></b></h4>
        <p><%= chapter.body %></p>
        <h3>Commentarios</h3>
        <% chapter.comments.each do |comment| %>
              <p>
                <b>Autor:</b>
                <%= comment.user.email %>
              </p>
              <p>
                <b>Comentario:</b>
                <%= comment.body %>
              </p>
               <%= link_to 'Destroy Comment', [comment.movie, comment],
                           :confirm => 'Are you sure?',
                           :method => :delete %>
        <% end %>
        <h3>A침ade un comentario a esta entrada en el diario:</h3>
        <%= form_for([@adventure, chapter, chapter.comments.build]) do |f| %>
                   
                    <div class="field">
                      <%= f.label :body %><br />
                      <%= f.text_area :body, :size => "5x10"  %>
                    </div>




                    <div class="actions">
                      <%= f.submit %>
                    </div>
                  <% end %>
    <% end %>
    
    </div>

      <div class="span3">
        <h3>A침ade una entrada en el diario:</h3>
        <%= form_for([@adventure, @adventure.chapters.build]) do |f| %>
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :body %><br />
              <%= f.text_area :body, :size => "5x10"  %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
        <% end %>
        <p>A침ade una personaje a la aventura :</p>
            <%= form_for([@adventure, @adventure.characters.build]) do |f| %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name %>
              </div>
              <div class="field">
                <%= f.label :history %><br />
                <%= f.text_field :history %>
              </div>
              <div class="field">
                <%= f.label :pj %><br />
                <%= f.check_box :pj %>
              </div>
              <div class="field">
                <%= f.label :alive %><br />
                <%= f.check_box :alive %>
              </div>
              <div class="field">
                <%= f.label :user_id %><br />
                <%= f.number_field :user_id %>
              </div>
              <div class="actions">
                <%= f.submit %>
              </div>
            <% end %>
      </div>
    </div>
</div>