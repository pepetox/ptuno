<div class="container">
    <div class="row">
      <div class="span9">
      <h1><%= link_to @adventure.name, @adventure %></h1>
        <% if current_user.try(:admin?)%>
            <%= link_to 'Edita la partida', edit_adventure_path(@adventure) %> 
        <% end %>
      <p>
          <b>Sistema de juego: </b>
          <%= @adventure.system %>
      </p>
      <p>
          <b>Descriptión:</b>
          <%= @adventure.description %>
      </p>
      <p>
          <b>Maestro de ceremonias:</b>
          <%= @adventure.mc %>
      </p>
      <p>
          <b>Estado de la partida: </b>
          <% if @adventure.playing? %>
             jugando 
          <% else %>
             terminada 
          <% end %>
      </p>        
      <p><b>Protagonizada por: </b></p>
      <ul>
          <% @adventure.characters.each do |char| %>
            <li><b><%= link_to char.name, char %></b></li></p>   
          <% end %>
      </ul>
    


    <h2>Diario de la aventura</h2>
    <ol>
      <% @adventure.chapters.each do |chapter| %>
        <h4><li><b><%= link_to chapter.name, chapter %></b></li></h4>
        <p><%= chapter.body %></p>
    </ol>    
    <% end %>
    <%= link_to 'Volver', adventures_path %>
    </div>
      <div class="span3">
        <h3>Añade una entrada en el diario:</h3>
        <%= form_for([@adventure, @adventure.chapters.build]) do |f| %>
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :body %><br />
              <%= f.text_area :body, :size => "5x10"  %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
        <% end %>
        <h3>Añade una personaje a la aventura :</h3>
            <%= form_for([@adventure, @adventure.characters.build]) do |f| %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name %>
              </div>
              <div class="field">
                <%= f.label :history %><br />
                <%= f.text_field :history %>
              </div>
              <div class="field">
                <%= f.label :pj %><br />
                <%= f.check_box :pj %>
              </div>
              <div class="field">
                <%= f.label :alive %><br />
                <%= f.check_box :alive %>
              </div>
              <div class="field">
                <%= f.label :user_id %><br />
                <%= f.number_field :user_id %>
              </div>
              <div class="actions">
                <%= f.submit %>
              </div>
            <% end %>
      </div>
    </div>
</div>