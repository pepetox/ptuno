<h1>Listado de documentos</h1>

<table class="table table-striped">
  <tr>
    <th>Adventure</th>
    <th>Nombre</th>
    <th>Descripion</th>
    <th>imagen</th>
    <th>Gdoclink</th>
    <th>User</th>
    <th></th>
    <th></th>
    
  </tr>

<% @docs.each do |doc| %>
  <tr>
    <td><%=  link_to doc.adventure.name, doc.adventure %></td>
    <td><%= link_to doc.name, doc_path(doc) %></td>
    <td><%= doc.history %></td>
    <td><%= doc.imglink %></td>
    <td><%= link_to doc.gdoclink, doc.gdoclink %></td>
    <td><%= doc.user_id %></td>
    <td><%= link_to 'Editar', edit_doc_path(doc) %></td>
    <td><%= link_to 'Borrar', doc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
 <% if params[:adventure_id] %>
 <%= link_to 'Crear un nuevo documento', new_adventure_doc_path(@adventure) %><br />
 <% end %>

<% @docs.each do |doc| %>
<% if doc.gdoclink != ""%>
<h3><%= doc.name %></h3>
<iframe width="900" height="720" src=<%= doc.gdoclink%></iframe>
<% end %>
<% end %>



